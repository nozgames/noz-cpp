{
  "version": 6,
  "configurePresets": [
    {
      "name": "editor-debug",
      "displayName": "Editor Debug",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/editor-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "NOZ_EDITOR": "ON",
        "NOZ_RENDERER": "GL"
      }
    },
    {
      "name": "editor-release",
      "displayName": "Editor Release",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/editor-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "NOZ_EDITOR": "ON",
        "NOZ_RENDERER": "GL"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "editor-debug",
      "configurePreset": "editor-debug"
    },
    {
      "name": "editor-release",
      "configurePreset": "editor-release"
    }
  ]
}
