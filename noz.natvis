      <ExpandedItem>(EntityImpl*)this</ExpandedItem>
    </Expand>
  </Type>

  <Type Name="ElementBase">
    <DisplayString>Element</DisplayString>
    <Expand>
      <ExpandedItem>(ElementImpl*)this</ExpandedItem>
    </Expand>
  </Type>


  <Type Name="Element">
    <DisplayString>Element</DisplayString>
    <Expand>
      <ExpandedItem>(ElementImpl*)this</ExpandedItem>
    </Expand>
  </Type>

  <Type Name="ObjectBase">
    <DisplayString>Object</DisplayString>
    <Expand>
