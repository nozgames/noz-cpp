<AutoVisualizer xmlns="http://schemas.microsoft.com/vstudio/debugger/natvis/2010">

  <!-- Object base visualizer -->
  <Type Name="Object">
    <DisplayString>Object</DisplayString>
    <Expand>
      <ExpandedItem>(ObjectImpl*)this</ExpandedItem>
    </Expand>
  </Type>

    <Type Name="Entity">
    <DisplayString>Entity</DisplayString>
    <Expand>
      <ExpandedItem>(EntityImpl*)this</ExpandedItem>
    </Expand>
  </Type>

